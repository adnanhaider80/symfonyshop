
{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <table class="table">
    <thead>
        <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Price</th>
        <th scope="col">Description</th>
        <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        {% for product in products%}
            <tr>
                <td>{{product.id}}</td>
                <td>{{product.name}}</td>
                <td>{{product.price}}</td>
                <td>{{product.description}}</td>
                <td>
                    <a class="btn btn-warning btn-sm" href="/update/{{product.id}}">Update</a>
                    <a class="btn btn-danger btn-sm" href="/delete/{{product.id}}">Delete</a>
                </td>
            </tr>
        {% endfor%}
    </tbody>
    </table>
</div>
{% endblock %}